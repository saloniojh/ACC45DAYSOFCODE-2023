import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner sc= new  Scanner(System.in);
		int T =sc.nextInt();
		for (int i=0;i<T ;i++ ){
		    int X=sc.nextInt();
		    int Y=sc.nextInt();
		    int total_buckets=2*Y;
		    int bucket_needed=X/total_buckets;
		    System.out.println(bucket_needed);
		}
	}
}
