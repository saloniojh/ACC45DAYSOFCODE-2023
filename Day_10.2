		    Map<Integer,Integer> m = new HashMap<>();
		    int s = sc.nextInt();
		    
		    for(int i=0;i<s;i++)
		    {
		     int data =sc.nextInt();
		     if(m.containsKey(data))
		     {
		         m.put(data,m.get(data)+1);
		     }
		     else{
		         m.put(data,1);
		     }
		    }
		    int max =Integer.MIN_VALUE;
		    for(Map.Entry<Integer,Integer> map: m.entrySet())
		    {
		        int value = map.getValue();
		        max = Math.max(max,value);
		    }
